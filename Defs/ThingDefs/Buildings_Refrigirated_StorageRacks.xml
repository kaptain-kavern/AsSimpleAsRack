<?xml version="1.0" encoding="utf-8" ?>
<Buildings>
<!-- Abstract -->

  <ThingDef Name="FridgeBase" Abstract="True">
    <thingClass>RimFridge.Building_Refrigerator</thingClass>
    <DesignationCategory>Storage</DesignationCategory>
    <description>Haulers carry stuff here for storage. This storage is refrigerated</description>
    <altitudeLayer>Building</altitudeLayer>
    <holdsRoof>true</holdsRoof>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <statBases>
      <Flammability>1.0</Flammability>
    </statBases>
    <category>Building</category>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
    <researchPrerequisites>
      <li>AirConditioning</li>
    </researchPrerequisites>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <building>
      <preventDeterioration>true</preventDeterioration>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>FoodMeals</li>
            <li>AnimalProductRaw</li>
            <li>PlantMatter</li>            
          </categories>
          <thingDefs>
            <li>Beer</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>FoodMeals</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <surfaceType>Item</surfaceType>
    <comps>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Glower">
        <glowRadius>2.5</glowRadius>
        <glowColor>(89,188,255,0)</glowColor>
      </li>
    </comps>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>    
    <tickerType>Rare</tickerType>
    <pathCost>30</pathCost>
  </ThingDef>


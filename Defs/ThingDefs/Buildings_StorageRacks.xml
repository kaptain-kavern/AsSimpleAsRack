<?xml version="1.0" encoding="utf-8" ?>
<Buildings>
<!-- Abstract -->
  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <ThingDef Name="StorageRackBase" Abstract="True" ParentName="BuildingBase">
    <description>Haulers carry stuff here for storage.</description>
    <thingClass>Building_Storage</thingClass>
    <AltitudeLayer>Building</AltitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <DesignationCategory>Storage</DesignationCategory>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <statBases>
      <Flammability>1.0</Flammability>
      <Beauty>0</Beauty>
    </statBases>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <pathCost>125</pathCost>
    <building>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>Root</li>
          </categories>
          <exceptedCategories>
    				<li>Corpses</li>
            <li>Chunks</li>
    			</exceptedCategories>
          <specialFiltersToDisallow>
            <li>AllowRotten</li>
          </specialFiltersToDisallow>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <researchPrerequisites>
      <li>Smithing</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef Name="StorageRackRefrigerated" ParentName="StorageRackBase" Abstract="True">
    <thingClass>RimFridge.Building_Refrigerator</thingClass>
    <description>Haulers carry stuff here for storage. This storage is refrigerated</description>
    <holdsRoof>true</holdsRoof>
    <building>
      <preventDeterioration>true</preventDeterioration>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>150</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Glower">
        <glowRadius>2.5</glowRadius>
        <glowColor>(89,188,255,0)</glowColor>
      </li>
    </comps>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
  </ThingDef>


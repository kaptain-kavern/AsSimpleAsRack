<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- Abstract -->
  <ThingDef Name="StorageRackBase" Abstract="True" ParentName="BuildingBase">
  	<description>Haulers carry stuff here for storage.</description>
    <thingClass>Building_Storage</thingClass>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <designationCategory>ASAR_StorageCat</designationCategory>
    <tradeTags>
      <li>Furniture</li>
    </tradeTags>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <statBases>
      <Flammability>1.0</Flammability>
      <Beauty>0</Beauty>
    </statBases>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <pathCost>125</pathCost>
    <building>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>Root</li>
          </categories>
          <exceptedCategories>
    				<li>Corpses</li>
            <li>Chunks</li>
    			</exceptedCategories>
          <specialFiltersToDisallow>
            <li>AllowRotten</li>
          </specialFiltersToDisallow>
        </filter>
      </defaultStorageSettings>
    </building>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <canOverlapZones>false</canOverlapZones>
  </ThingDef>

<!-- Normal Racks -->

